[color]
	ui = auto
[alias]
	add = add -v
	br = branch
	co = checkout
	di = diff
	ds = diff --staged
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
	log-nice = log --graph --decorate --abbrev-commit --pretty=oneline
	pul = pull
	so = show
	st = status
	gerrit-config-co = ! git fetch gerrit refs/meta/config:refs/remotes/gerrit/meta/config && git checkout meta/config
	gerrit-config-push = push gerrit meta/config:refs/meta/config
	gerrit-config-review = push gerrit meta/config:refs/for/refs/meta/config
[core]
	quotepath = false
[push]
	default = matching
