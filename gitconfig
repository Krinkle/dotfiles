[color]
	ui = auto
[diff]
	compactionHeuristic = 1
[alias]
	p = add -p
	ad = add
	br = branch
	clx = clean -dffx
	co = checkout
	comit = commit
	ap = commit --amend
	di = diff
	ds = diff --staged
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
	l = ! git lg -n25
	pul = pull
	pulll = pull
	por = pull --rebase
	hard = reset --hard
	sh = show
	sho = show
	so = show
	lg-prefix = "!f() { git log --no-merges --oneline $1 | cut -d' ' -f2 | grep ':' | sort | uniq -c | sort -rn; }; f"
	pem = ! git checkout master && git br -D
	st = status -sb
	gerrit-config-co = ! git fetch origin refs/meta/config:refs/remotes/origin/meta/config && git checkout meta/config
	gerrit-config-push = push origin meta/config:refs/meta/config
	gerrit-config-review = push origin meta/config:refs/for/refs/meta/config
	gerrit-dashboard-co = ! git fetch origin refs/meta/dashboards/custom:refs/remotes/origin/meta/dashboards/custom && git checkout meta/dashboards/custom
	gerrit-dashboard-review = push origin HEAD:refs/for/refs/meta/dashboards/custom
	bisect-up = bisect bad
	bisect-down = bisect good
[gitreview]
	remote = origin
[core]
	quotepath = false
[push]
	default = matching
