#!/bin/bash -ue

if [ -z "${1:-}" ]; then
	# Missing parameters
	echo
	echo "  Usage: $(basename $0) <host>"
	echo
	echo '  Options:'
	echo '    <host>  Destination for scp command.'
	echo
	exit 1
fi

host=$1
dir=$(dirname $0)/../../wmf

function setup {
	from=$1
	to=$2
	if [ ! -e "$from" -o ! -r "$from" ]; then
		echo "Cannot send $from"
		exit 1
	fi
	echo "... setting up $to"
	#echo scp "$from" "$to"
}

setup "$dir/bash_profile.sh" "$host:.bash_profile"
setup "$dir/bashrc.sh" "$host:.bashrc"
setup "$dir/screenrc" "$host:.screenrc"
echo "Done!"
